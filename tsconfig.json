{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": ".",
    "rootDir": "./src",
    "paths": {
      "*": ["node_modules/*", "src/types/*"],
      "@src/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts"]
}
